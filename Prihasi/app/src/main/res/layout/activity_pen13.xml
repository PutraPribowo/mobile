<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5ecf9"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/view">

    <include
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    layout="@layout/toolbar_layout"
    />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/logo"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yu5"
                android:textStyle="bold"/>

            <TextView
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yu7"/>

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@string/yu2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <!--penyakit-->

            <TextView
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Karena makanan yang pedas dan sakit perut"/>

            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yu3"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MULAS BIASA"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/za13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yu4"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:layout_marginTop="35dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
