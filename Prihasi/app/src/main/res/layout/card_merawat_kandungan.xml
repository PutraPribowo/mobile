<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:descendantFocusability="blocksDescendants"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/cv"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#01befd"
        >
        <!--  card_view:cardElevation="2dp"
          card_view:cardMaxElevation="4dp"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="16dp"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/l_layout"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namalearningText"
                    android:textColor="#000"
                    android:textSize="15sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/l_layout"
                android:visibility="gone"
                android:id="@+id/expandableLayout" >

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:text="@string/deskripsi1"
                    android:layout_margin="1dp"
                    android:gravity="start|center"
                    android:textColor="#000"
                    android:id="@+id/mean"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean"
                    android:id="@+id/deskripsiText"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_margin="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deskripsiText"
                    android:text="@string/referensi"
                    android:layout_margin="1dp"
                    android:gravity="start|center"
                    android:textColor="#000"
                    android:id="@+id/mean2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean2"
                    android:id="@+id/linkGambar"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_margin="1dp"/>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>